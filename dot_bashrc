#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

alias ls='ls --color=auto'
alias grep='grep --color=auto'
PS1='[\u@\h \W]\$ '
alias paru='pikaur'
alias yay='pikaur'
alias vim='helix'
alias nvim='helix'
alias nano='helix'
alias cd='z'
eval "$(starship init bash)"
eval "$(zoxide init bash)"
